<div class="row justify-content-center">
  <% @images.each do |image| %>
    <div class="col-md-3">
      <div class="card p-3 shadow mb-5">
        <%= image_tag image.image, class: 'card-img-top img-fluid rounded', style: 'width: 100%; max-width: 600px;' %>
        <div class="card-body bg-white">
          <h5 class="card-title bg-white"><%= image.title %></h5>
        </div>
      </div>
    </div>
  <% end %>
</div>
